@import '../vars.styl'
@import '../basic.styl'

#root
  width: 100%
  height: 100%
  padding: 55px 0 0
  position: relative

#widgets
  overflow: scroll
  padding: 5px
  width: 134px
  height: 100%
  background: #eee
  border-right: 4px solid #ccc
  position: fixed
  left: 0
  top: 0
  padding-top: 60px
  .widget
    width: 120px
    height: 80px
    background: #fff
    text-align: center
    line-height: 80px
    margin-bottom: 5px
    background: #fff center center no-repeat
    background-size: contain
#editor
  min-height: 100%
  background: #fff
  padding: 20px 20px 20px 154px
  width: 100%
  .sortable-ghost
    background-image: none!important
    border: 2px dashed #ccc
    margin: 10px 0
    padding: 10px

*[contenteditable=true]
  outline: none

.block
  position: relative
  .handle
    position: absolute
    z-index: 100
    color: #444
    background: #eee
    padding: 2px 5px
    border-radius: 3px
    border: 1px solid #ccc
    display: none

.block:hover .handle
  display: block
.block .handle .fa
  margin: 5px
  display: block

#ctrl
  background: #444
  border-radius: 5px
  box-shadow: 0 1px 3px rgba(0,0,0,.1)
  border: 1px solid #ccc
  color: #fff
  padding: 5px 6px 3px
  position: fixed
  bottom: 10px
  left: 10px
  i.fa
    font-size: 1.2em
    margin: 0 6px
    display: inline-block

