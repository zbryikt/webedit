@import '../vars.styl'
@import '../basic.styl'

@keyframes blink
  0%
    opacity: 0
  29%
    opacity: 0
  30%
    opacity: 1
  100%
    opacity: 1
#landing
  color: #444
  background: linear-gradient(45deg, #1e5799 0%,#7db9e8 100%)
  padding-top: 80px
  overflow: hidden
  height: 650px
  & > .bk
    width: 100%
    height: 100%
    background: url(/assets/img/bk/ripple.svg) center center
  .inner
    max-width: 1200px
    width: 90%
    margin: auto
    background: url(/assets/img/bk/nw.jpg) #fff center center
    box-shadow: 0 100px 100px 10px rgba(0,0,0,.5)
    .bk
      position: relative
      width: 100%
      height: 100%
      padding: 0 80px
      background-image: linear-gradient(45deg, rgba(0,0,0,.1) 0%, rgba(255,255,255,.5) 33%, rgba(255,255,255,.9) 65%,rgba(255,255,255,.3) 100%)
      .row
        position: relative
        z-index: 1
      &:after
        content: " "
        display: block
        width: 100%
        height: 100%
        position: absolute
        background: url(/assets/img/bk/redtri.png) right top no-repeat
        z-index: 0
        top: 0
        right: 0

  h1 
    color: #000
    max-width: 420px
    font-size: 3em
    font-weight: 800
    & > div > span
      white-space: nowrap
      & > span
        display: inline-block
        border-left: 3px solid #0f0
        width: 1px
        height: 36px
        animation(blink 1.3s linear infinite)
        &.blue
          border-left-color: #99f
          animation-delay: .7s
        &.pink
          border-left-color: #f99
          animation-delay: .3s
  .sep
    margin: 1.5rem 0
  p
    font-size: 1.2em
    font-family: 'soleil', sans-serif
  .btn
    background-image: linear-gradient(to bottom, #d8686f 0%,#dc3545 100%)
    border-radius: 50px
    padding: 10px 30px
  .sample
    height: 600px
    background: url(/assets/img/landing/sample.png) #ddd center top no-repeat
    background-size: cover
    border-radius: 15px 15px 0 0
    box-shadow: 0 60px 30px 0 rgba(0,0,0,.4)

#landing-detail
  .pricing
    .sep
      height: 500px
    .pricing-panel
      position: relative
      .bk-animation
        width: 100%
        height: 460px
        position: absolute
        margin-top: 50px
        background: url(/assets/img/bk/ripple-lg.svg) #eee
        border-top: 1px solid #ccc
        border-bottom: 1px solid #ccc
      .row
        max-width: 1024px
        width: 90%
        text-align: center
        margin: auto
      .btn
        padding: 5px 30px 10px
      .pricing-plan
        background: linear-gradient(to bottom, #ffffff 0%,#f6f6f6 100%)
        padding-bottom: 40px
        border: 1px solid #ccc
        border-radius: 5px
        box-shadow: 0 20px 20px rgba(0,0,0,.1)
        ul
          text-align: left
          list-style-type: none
          height: 100px
          li:before
            content: "\2611"
            display: inline-block
            font-size: 1.2em
            margin-right: 5px

        .name
          text-decoration: underline
          line-height: 100px

        .pricing
          width: 100%
          height: 122px
          margin: 0 0 30px
          padding: 30px 0
          border-top: 1px solid
          border-bottom: 1px solid
          border-color: #ccc
          background: #fff
          color: #28a745
          .currency
            text-align: left
            display: inline-block
          .amount
            line-height: 32px
            display: inline-block
            font-size: 5em
            font-family: 'Lato'
            font-weight: 700
            .sub, .sup
              font-size: .5em
            .sup
              vertical-align: top
          .period
            font-size: 0.8em
            line-height: 1em
