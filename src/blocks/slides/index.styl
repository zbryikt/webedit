.block-slides
  padding: 0
  margin: 0
  .inner
    padding: 0
    margin: 0!important
    width: 100%!important
    max-width: initial!important
  .slides
    width: 100%
    min-height: 100vh
    display: table
    position: relative
  .slide
    display: table-cell
    width: 100%
    height: 100vh
    vertical-align: middle
    text-align: center
  .slides > .fa
    position: absolute
    z-index: 1
    cursor: pointer
    top: 50%
    transform: translate(0,-50%)
    font-size: 3em
    color: #fff
    text-shadow: 0 0 5px rgba(0,0,0,.2)
  .slides > .fa-chevron-right
    right: 10px
  .slides > .fa-chevron-left
    left: 10px
