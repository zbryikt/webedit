@import '../vars.styl'
@import '../basic.styl'

@keyframes blink
  0%
    opacity: 0
  29%
    opacity: 0
  30%
    opacity: 1
  100%
    opacity: 1
#landing
  color: #444
  background: linear-gradient(45deg, #1e5799 0%,#7db9e8 100%)
  padding-top: 80px
  overflow: hidden
  height: 650px
  .bk
    width: 100%
    height: 100%
    background: url(/assets/img/landing/bk.svg) center center
  .inner
    max-width: 1200px
    width: 90%
    margin: auto
    background-image: linear-gradient(45deg, #f9f9f9 0%,#ffffff 100%)
    padding: 0 80px
    box-shadow: 0 100px 100px 10px rgba(0,0,0,.5)
  h1 
    color: #000
    max-width: 420px
    font-size: 3em
    font-weight: 800
    & > div > span
      white-space: nowrap
      & > span
        display: inline-block
        border-left: 3px solid #0f0
        width: 1px
        height: 36px
        animation(blink 1.3s linear infinite)
        &.blue
          border-left-color: #99f
          animation-delay: .7s
        &.pink
          border-left-color: #f99
          animation-delay: .3s
  .sep
    margin: 1.5rem 0
  p
    font-size: 1.2em
    font-family: 'soleil', sans-serif
  .btn
    background-image: linear-gradient(to bottom, #d8686f 0%,#dc3545 100%)
    border-radius: 50px
    padding: 10px 30px
  .sample
    height: 600px
    background: url(/assets/img/landing/sample2.png) #ddd center top no-repeat
    background-size: cover
    border-radius: 15px 15px 0 0
    box-shadow: 0 60px 30px 0 rgba(0,0,0,.2)

#landing-detail
  .pricing
    .sep
      height: 500px
    .pricing-panel
      .btn
        border-radius: 50px
        padding: 5px 30px
      .pricing-plan
        ul
          text-align: left
          list-style-type: none
          height: 100px
          li:before
            content: "\2611"
            display: inline-block
            font-size: 1.2em
            margin-right: 5px
        small
          display: block
          margin-bottom: 20px


        padding: 40px 10px
        .name
          text-decoration: underline
        .pricing
          width: 120px
          height: 70px
          margin: 60px auto
          .currency
            text-align: left
            display: inline-block
          .amount
            line-height: 32px
            display: inline-block
            font-size: 4em
            font-family: 'avenir'
            color: #49f
            .sub
              font-size: 16px
          .period
            width: 120px
            font-size: 0.8em
            line-height: 1em
