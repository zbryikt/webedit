[image=image]
  background-size: cover
  background-repeat: no-repeat
  background-position: center center

.root-block
  font-family: Raleway, PingFangTC-Regular, Heiti TC, Microsoft JhengHei, Helvetica, Arial, sans-serif
  color: #555
  iframe
    border: 0
  .btn a
    color: #fff
  b
    font-weight: 600

.block-item
  position: relative
  //- for preventing margin collapsing
  border-top: 0.1px solid transparent
  border-bottom: 0.1px solid transparent
  & > .inner
    margin: 20px 40px
  &:first-child > .inner
    margin-top: 40px
  &:last-child > .inner
    margin-bottom: 40px

#makeweb
  position: fixed
  bottom: 0
  right: 20px
  font-size: 12px
  color: #ccc
  padding: 10px
  background: #222
  border-radius: 5px 5px 0 0
  box-shadow: 0 9px 4px 2px rgba(0,0,0,.2)
  .inner
    margin-bottom: -10px
  img
    height: 11px
    vertical-align: 0
  &.short
    padding: 6px 10px

#edit-this-page
  position: fixed
  right: 20px
  bottom: 40px
  color: #444
  font-size: 12px
  background: rgba(255,255,255,.9)
  padding: 5px
  border-radius: 5px
  width: 50px
  height: 56px
  text-align: center
  box-shadow: 0 3px 3px rgba(0,0,0,.1)
  i.fa
    font-size: 32px
    margin-left: 5px


@media(max-width:768px)
  .block-item > .inner
    margin: 20px 10px
