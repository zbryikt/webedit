.block-gallery
  .thumbs
    display: flex
    flex-wrap: wrap
    align-items: stretch
  .thumb
    flex: 1 1 auto
    min-width: 140px
    width: 20%
    background-color: none
    margin: 1px
    .inner
      width: 100%
      padding-bottom: 75%
      height: 0
  .thumb:hover
    background-color: #eee
.modal-block-gallery
  .modal-dialog
    max-width: 90vw
  .modal-content
    background: none
    border: 0
    .inner
      width: 100%
      height: 90vh
      background-repeat: no-repeat
      background-size: contain
      background-position: center center
.page-viewer .block-gallery .thumb
  transition: none!important
  &:hover
    background-color: transparent
