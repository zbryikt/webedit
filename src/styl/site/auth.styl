@import '../vars'
@import '../basic'

+keyframes(auth-reset-img)
  0%
    opacity: 1
  50%
    opacity: 1
    height: 200px
  100%
    opacity: 0
    height: 0

+keyframes(auth-reset-icon)
  0%
    opacity: 0
  50%
    opacity: 0
    font-size: 0
  100%
    opacity: 1
    font-size: 128px

#auth-reset-sent
  img
    animation(auth-reset-img 1.5s ease-out 1 forwards)
    
  i.fa
    color: #a7f887
    margin: 40px 0
    animation(auth-reset-icon 1.5s ease-in 1 forwards)


