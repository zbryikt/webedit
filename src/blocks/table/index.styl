.block-table
  th, td
    padding: 5px

  th
    border-bottom: 2px solid #000
    position: relative
    &:before, &:after
      position: absolute
      z-index: 9
      background: #fff
      box-shadow: 0 1px 3px rgba(0,0,0,.2)
      padding: 1px 3px
      border: 1px solid #ccc
      border-radius: 3px
      font: normal normal normal 14px/1 FontAwesome
      display: none
      padding: 3px 5px
      line-height: 14px
      cursor: pointer
      opacity: 0.8
    &:before
      content: "\f068"
      left: 10px
    &:after
      content: "\f067"
      right: 10px
    &:hover:before, &:hover:after
      display: inline-block
.page-viewer .block-table th
  &:before, &:after
    display: none
