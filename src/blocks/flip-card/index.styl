.block-flip-card .flip-card
  position: relative
  perspective: 1000px
  transition: height
  .question, .answer
    transform-origin: 50% 50%
    position: static
    top: 0
    border: 1px solid #ccc
    width: 100%
    background: #fff
    box-shadow: 0 2px 4px rgba(0,0,0,.1)
    padding: 20px
    margin-bottom: 5px
    border-radius: 3px
.page-viewer .block-flip-card .flip-card .answer
  opacity: 0
  display: none

@keyframes flip-card-in
  0%
    transform: rotateY(-180deg)
    opacity: 0
  49%
    opacity: 0
  50%
    opacity: 1
  100%
    transform: rotateY(0deg)
    opacity: 1

@keyframes flip-card-out
  0%
    transform: rotateY(0deg)
    opacity: 1
  49%
    opacity: 1
  50%
    opacity: 0
  100%
    transform: rotateY(180deg)
    opacity: 0

.page-viewer .block-flip-card .flip-card.chosen
  .question
    animation: flip-card-out 0.5s 1 forwards cubic-bezier(.3,0,.7,1)
    opacity: 0
    position: absolute
  .answer
    animation: flip-card-in 0.5s 1 forwards cubic-bezier(.3,0,.7,1)
    opacity: 1
    display: block

