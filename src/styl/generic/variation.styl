@import '../vars'
@import '../basic'

.gray
  color: #999
.light
  font-weight: normal
  color: #bbb
a.light:hover
  color: #fff
.block
  display: block
.tiny
  font-size: .65em
.big
  font-size: 1.5em
.huge
  font-size: 3em
.bold
  font-weight: 900
.underline
  text-decoration: underline

.fast
  animation-duration: 0.6s
.slow
  animation-duration: 1.4s
