//- module
doctype html
- var navbar = true
- var debug = false
- var version = "0"
- var thumbnail = "https://makeweb.io/assets/img/thumbnail.png"
- var thumbtype = "image/png"
- var thumb_width = "1200"
- var thumb_height = "630"
- var favicon = "/assets/img/favicon.png"
- var title = "makeweb.io - Real-Time Collaborative Web Design"
- var description = "make and share interactive web pages with people in the intuitive way"
- var rootid = ""
- var rootclass = ""
html(lang="en")
  include /mixins/index.jade
  block vars
  head(prefix="og: http://ogp.me/ns#")
    if !debug
      include /module/ga.html
    include /module/head.jade
    meta(charset="utf-8")
    +css("/css/pack/base.css")
    link(rel="stylesheet",href="https://use.typekit.net/efg4kga.css")
    +script("/js/pack/base.js")
    +script("/js/global.js")
    // head
    block head
  body(id=rootid,class=rootclass,ng-app="webedit",ng-controller="site")
    if navbar
      include /nav.jade
    include /auth/panel.jade
    #notifications
      .notify(ng-repeat="n in notifications",ng-class="'notify-'+n.type",ng-cloak) {{n.message}}
    include /pricing/plan-modal.jade
    include /pricing/pay-modal.jade
    include /pricing/thanks-modal.jade
    include /pricing/warn-modal.jade
    block body
    //- if !debug
    //-   include /module/facebook.jade
