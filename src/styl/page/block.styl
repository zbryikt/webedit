.block-item
  & > .handle
    position: absolute
    cursor: pointer
    display: none
    animation-duration: 0.1s
    top: 0
    left: auto
    right: 100%
    z-index: index(order, 'block-handle')
    margin: 5px 0 0 0
    padding: 2px 5px
    background: #fff
    border: 1px solid #e1e3e4
    border-right: 0
    border-radius: 5px 0 0 5px
    box-shadow: -1px 2px 2px rgba(0,0,0,0.02)
    color: #777
    font-size: 14px
    text-align: center
    i.fa
      padding: 5px 0 5px 2px
    i.fa:first-child
      padding-top: 8px
    i.fa:last-child
      padding-bottom: 8px
.block-item:hover > .handle
  display: block
.block-item.sortable-ghost > .handle
    display: none
.block-item *[image]
  position: relative

*[image=bk]
  position: relative
*[image=bk]:after
  content: "\f030"
  font: normal normal normal 14px/1 FontAwesome
  display: block
  width: 30px
  height: 25px
  transform: scale(0)
  padding: 5px 6px
  opacity: 0
  border-radius: 3px
  border: 1px solid #999
  box-shadow: 0 1px 3px rgba(0,0,0,.1)
  position: absolute
  top: 10px
  right: 10px
  background: linear-gradient(to bottom, #ffffff 0%,#f4f4f4 100%)
  cursor: pointer
  transition(all 0.3s ease-in-out)
  color: #444
*[image=bk]:hover:after
  width: 30px
  height: 25px
  transform: scale(1)
  opacity: 1
  transition(all 0.3s ease-in-out)
