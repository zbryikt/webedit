.pricing-plan
  .name Basic
  .price(style="font-size:0.7em"): .amount(style="margin-top:15px;color:#aaa") FREE
  .gray.mb-3: small includes
  ul
    li HTML Export
    li Basic widgets
  .gray: small &nbsp;
  .gray: small &nbsp;
  .btn.btn-success.btn-lg.mt-4(ng-click="auth.isSignIn=false;auth.ctrl.toggle()",ng-show="!user.data.key") Sign Up
  a.btn.btn-success.btn-lg.mt-4(href="/page/create",
  ng-show="user.data.key && !user.data.plan || user.data.plan.name == 'free'") Get Start
  //-
    .btn.btn-danger.btn-lg.mt-4.clickable(ng-show="user.data.plan && !user.data.plan.canceled",
    style="padding:5px 15px",ng-click="subscription.toggle.warn()") Stop Future Billing
    .btn.btn-outline-secondary.btn-lg.mt-4.clickable(ng-show="user.data.plan.canceled") Canceled
