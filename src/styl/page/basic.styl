[image=image]
  background-size: cover
  background-repeat: no-repeat
  background-position: center center
  max-width: 100%
  &:div
    display: none

[image=image][preserve-aspect-ratio=true]
  height: auto!important
  &:div
    display: block
    height: 0


.root-block
  font-family: Raleway, PingFangTC-Regular, Heiti TC, Microsoft JhengHei, Helvetica, Arial, sans-serif
  color: #555
  iframe
    border: 0
  .btn a
    color: #fff
  b
    font-weight: 600

.root-block
  h1, h2, h3, h4, h5, h6
    font-weight: bold
  h1
    font-size: 3em
  h2
    font-size: 2.25em
  h3
    font-size: 1.75em
  h4
    font-size: 1.5em
  h5
    font-size: 1.25em
  h6
    font-size: 1em

.block-item
  position: relative
  //- for preventing margin collapsing
  border-top: 0.1px solid transparent
  border-bottom: 0.1px solid transparent
  & > .inner
    margin: 20px 40px
  &:first-child > .inner
    margin-top: 40px
  &:last-child > .inner
    margin-bottom: 40px

#makeweb
  position: fixed
  bottom: 0
  right: 20px
  font-size: 12px
  color: #ccc
  padding: 10px
  background: #222
  border-radius: 5px 5px 0 0
  box-shadow: 0 9px 4px 2px rgba(0,0,0,.2)
  .inner
    margin-bottom: -10px
  img
    height: 11px
    vertical-align: 0
  &.short
    padding: 6px 10px

#edit-this-page
  position: fixed
  right: 20px
  bottom: 40px
  color: #444
  font-size: 12px
  background: rgba(255,255,255,.9)
  padding: 5px
  border-radius: 5px
  width: 50px
  height: 56px
  text-align: center
  box-shadow: 0 3px 3px rgba(0,0,0,.1)
  i.fa
    font-size: 28px
    margin-left: 8px

i.fa-icon
  font: normal normal normal 14px/1 FontAwesome

*[resizable='true'], *[resizable='resizable']
  padding: 20px
  max-width: 100%

@media(max-width:768px)
  .block-item > .inner
    margin: 20px 10px
  .block-item
    padding: 0!important
    margin: 0!important

hr
  border-top: 1px solid #c8c8c8
