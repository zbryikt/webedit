.block-item
  & > .handle
    position: absolute
    cursor: pointer
    display: none
    animation-duration: 0.1s
    top: 0
    left: auto
    right: 100%
    z-index: index(order, 'block-handle')
    margin: 5px 0 0 0
    padding: 2px 5px
    background: #fff
    border: 1px solid #e1e3e4
    border-right: 0
    border-radius: 5px 0 0 5px
    box-shadow: -1px 2px 2px rgba(0,0,0,0.02)
    color: #777
    font-size: 14px
    text-align: center
.block-item:hover > .handle
  display: block
.block-item.sortable-ghost > .handle
    display: none
.block-item *[image]
  position: relative
