@import '../vars.styl'
@import '../basic.styl'

#nav-top
  display: none

body
  background: #f1f3f3

#editor-root
  width: 100%
  min-height: 100%
  height: 100%
  padding: 0
  background: #f1f3f3

[contenteditable=true]
  outline: none

#editor
  width: 100%
  height: 100%
  padding: 0
  width: 100%
  & > .head
    width: 800px
    margin: auto
    padding: 15px 0
    color: #777
    height: 61px
    transition(width .3s ease-in-out)
    .btn
      font-weight: 200
    .dropdown-item
      color: #666
      font-weight: 200
    .dropdown-menu
      box-shadow: 0 3px 1px rgba(0,0,0,.09)
      border-radius: 1px
      border: none
  & > .inner
    font-family: 'Raleway', sans-serif
    width: 800px
    min-height: 100%
    border: 0px solid #ccc
    border-top: .1px solid rgba(0,0,0,0) //- prevent margin collapsing
    margin: auto auto 40px
    background: #fff
    box-shadow: 0 24px 18px rgba(0,0,0,.2)
    transition(width .3s ease-in-out)
    & > .sortable-ghost
      background-image: none!important
      border: 2px dashed #ccc
      margin: 10px
      padding: 10px

#blocks-picker
  overflow-y: scroll
  position: fixed
  padding: 81px 10px 10px
  width: 130px
  height: 100%
  left: auto
  top: 0
  transition(right .3s ease-in-out)
  .block-thumb
    text-align: center
    margin-bottom: 10px
    width: 100px
    .name
      line-height: 14px
      font-size: 13px
      color: #aaa
    .thumb
      width: 100px
      height: 60px
      background-image: none!important
      background: #fff
      margin-bottom: 5px
      background: #fff center center no-repeat
      background-size: contain
      box-shadow: 0 3px 2px rgba(0,0,0,0.1)

#collab-info
  position: fixed
  padding: 81px 10px 10px 20px
  width: 110px
  height: 100%
  top: 0
  right: auto
  transition(left .3s ease-in-out)
  color: #444
  .list
    font-size: 0.8em
    color: #777
    .item
      margin-bottom: 5px
      i
        margin-right: 2px

.editor-export-modal
  pre
    white-space: normal
    font-family: consolas, monospace
    font-size: 16px
    background: #eee
    border: 1px solid #ccc
    box-shadow: inset 0 2px 4px rgba(0,0,0,.1)
    height: 300px
    overflow: scroll
    border-radius: 5px
    padding: 10px

[ng-clipboard]
  position: relative
  .hover-tip
    display: none

.copied[ng-clipboard] .hover-tip
  display: block


.editor-preview-modal .cover-modal-inner
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  height: 80%
  width: 800px
  max-width: 90%
  .card, .card-body
    width: 100%
    height: 100%
  #editor-preview
    padding: 0
    overflow: scroll

#editor > .inner > .placeholder
  width: 100%
  height: 300px
  padding: 10px
  display: table
  & > div
    width: 100%
    height: 300px
    border: 4px dashed #49f
    border-radius: 3px
    display: table-cell
    vertical-align: middle
    text-align: center
    font-size: 3em
    color: #ddd
    &:after
      content: "Drop Here"
      display: block

#editor-node-handle
  position: absolute
  top: 100px
  left: 100px
  z-index: index(order, 'handle')
  background: #fff
  text-align: center
  border: 1px solid #ccc
  border-radius: 5px
  color: #777
  display: none
  &:before
    content: " "
    display: block
    width: 8px
    height: 8px
    position: absolute
    transform: translate(-60%,-50%) rotate(45deg)
    top: 50%
    background: #fff
    border-left: 1px solid #ccc
    border-bottom: 1px solid #ccc
  i.fa
    display: block
    padding: 7px 5px
    border-bottom: 1px solid #ddd
    cursor: pointer
  i.fa.fa-arrows
    font-size: 15px
  i.fa.fa-trash-o
    font-size: 18px
    border: none

#collaborator-cursors
  position: relative
  margin: auto
#collaborator-cursors .cursor
  position: absolute
  width: 2px
  background: rgba(255,255,255,0.3)
  height: 24px
  border: 1px solid #0f0
  border-radius: 3px
  z-index: index(order, 'cursor')
  &.color1
    background: rgba(255,255,255,0.3)
    border-color: #f00
  &.color2
    background: rgba(255,255,255,0.3)
    border-color: #0f0
  &.color3
    background: rgba(255,255,255,0.3)
    border-color: #00f
  &.color4
    background: rgba(255,255,255,0.3)
    border-color: #f0f
  &.color5
    background: rgba(255,255,255,0.3)
    border-color: #ff0
  &.color6
    background: rgba(255,255,255,0.3)
    border-color: #0ff

#editor > .inner div[base-block].initializing
  margin: 20px
  .thumb
    height: 50px
    border-radius: 25px
    background: url(/assets/img/loader/msg.gif) #eee  center center no-repeat
  .name
    display: none
#editor > .inner div[base-block].sortable-ghost
  padding: 20px
  margin: 20px
  .thumb
    display: none
