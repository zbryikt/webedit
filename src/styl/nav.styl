nav.navbar.fixed-top
  background: none
  border-bottom: 0px solid none
  padding: 20px 10px
  max-width: 1200px
  margin: auto
  .navbar-brand img
    height: 20px
    margin-top: -8px
  .nav-link
    transition: all 0.5s ease-in-out
    color: #fff
  &.invert .nav-link
    color: #444
  .avatar
    display: inline-block
    width: 24px
    height: 24px
    border-radius: 50%
    background-size: cover
    background-repeat: no-repeat
    background-position: center center
    background-color: #999
    vertical-align: -6px
